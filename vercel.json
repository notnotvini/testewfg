{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://sitenovo.com.br/:match*",
      "permanent": true
    }
  ]
}
