{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "https://multiplaescolhaconcursos.com.br/"
        }
      ],
      "destination": "https://multiplaescolhaconcursos.com.br/$1",
      "permanent": true
    }
  ]
}
