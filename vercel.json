{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static-build",
      "config": {}
    }
  ],
  "rewrites": [
    { 
      "source": "/:path(.*)", 
      "destination": "/:path" 
      "permanent": true,
      "statusCode": 301
    }
  ]
}